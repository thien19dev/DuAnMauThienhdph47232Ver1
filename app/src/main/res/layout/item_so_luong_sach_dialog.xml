<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sửa số lượng Sách"
        android:textColor="#FF9800"
        android:padding="20dp"
        android:textSize="30sp" />
    <TextView
        android:layout_width="match_parent"
        android:paddingVertical="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvSachCanSuaSoLuong"
        android:text="Tên Sách:"
        android:textColor="#000000"
        android:textSize="20sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số Lượng Sách:"
        android:textColor="#000000"
        android:textSize="20sp" />
    <EditText
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edSuaSoLuongSach"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnLuuSoLuongSach"
        android:text="Lưu Số Lượng" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnHuyLuuSoLuongSach"
        android:text="Huy" />
</LinearLayout>